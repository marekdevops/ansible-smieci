import os
import time

def create_file_with_number(number):
    filename = f"file_{number}.txt"
    with open(filename, 'w') as f:
        # Wypełnienie pliku 'X' do 1 KB (1024 bajtów)
        f.write('X' * 1024)

def main():
    number = 1
    while True:
        create_file_with_number(number)
        print(f"Created file: file_{number}.txt")
        number += 1
        time.sleep(2)

if __name__ == "__main__":
    main()
